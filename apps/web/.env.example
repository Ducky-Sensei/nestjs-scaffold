# ============================================================================
# Application Configuration
# ============================================================================

# Application Version (auto-set by CI/CD in production)
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
# API Version - NestJS backend uses versioned endpoints (e.g., /v1/auth/login)
# Change this to v2, v3, etc. when upgrading to newer API versions
VITE_API_VERSION=v1

# OAuth URLs
# Note: OAuth URLs use versioned endpoints to match the NestJS backend
VITE_GOOGLE_OAUTH_URL=http://localhost:8000/v1/auth/google
VITE_GITHUB_OAUTH_URL=http://localhost:8000/v1/auth/github

# ============================================================================
# Monitoring & Observability (All opt-in, disabled by default)
# ============================================================================

# Sentry Error Tracking & Performance Monitoring
# Sign up at https://sentry.io
VITE_SENTRY_ENABLED=false
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Datadog Real User Monitoring (RUM)
# Sign up at https://www.datadoghq.com
VITE_DATADOG_ENABLED=false
VITE_DATADOG_APPLICATION_ID=
VITE_DATADOG_CLIENT_TOKEN=
VITE_DATADOG_SITE=datadoghq.com
VITE_DATADOG_SERVICE=scaffold-fe
VITE_DATADOG_ENV=development
VITE_DATADOG_VERSION=1.0.0
VITE_DATADOG_SESSION_SAMPLE_RATE=100
VITE_DATADOG_SESSION_REPLAY_SAMPLE_RATE=20
VITE_DATADOG_TRACK_USER_INTERACTIONS=true
VITE_DATADOG_TRACK_RESOURCES=true
VITE_DATADOG_TRACK_LONG_TASKS=true

# OpenTelemetry Distributed Tracing
# Configure your OTLP endpoint (Jaeger, Honeycomb, etc.)
VITE_OTEL_ENABLED=false
VITE_OTEL_SERVICE_NAME=scaffold-fe
VITE_OTEL_ENVIRONMENT=development
VITE_OTEL_EXPORTER_ENDPOINT=http://localhost:4318/v1/traces

# Web Vitals Analytics
# Custom endpoint to receive Web Vitals metrics
VITE_ANALYTICS_ENDPOINT=

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features
VITE_FEATURE_PWA=false
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_I18N=false

# ============================================================================
# Security
# ============================================================================

# Content Security Policy (CSP) - configured in vite.config.ts
# Set to 'true' to enable strict CSP in development
VITE_CSP_ENABLED=false
